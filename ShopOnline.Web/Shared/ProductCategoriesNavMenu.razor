@inherits ProductCategoriesNavMenuBase

@if(ProductCategoryDtos == null && ErrorMessage ==null)
{
    <DisplaySpinner/>
}
else if(ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage"/>
}
else
{
<div class="nav-item px-3">
    <NavLink class="nav-link" @onclick="ToggleSubMenu">
        <span class="fa-solid fa-tags" aria-hidden="true"></span>&nbsp; Category &nbsp;<i class="fa-solid fa-caret-down"></i>
    </NavLink>
    @if(expandSubMenu)
    {
        <div class="nav flex-column">
        @foreach (var productCategory in ProductCategoryDtos)
        {
            var link = "/ProductsByCategory/" + productCategory.Id;
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@link" @onclick="CategorySelected">
                    <span class="@productCategory.IconCSS" aria-hidden="true"></span>&nbsp; @productCategory.Name
                </NavLink>
            </div>
        }
        </div>
    }
      
</div>
}

