@inherits LayoutComponentBase

<div class="page">
    
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4" style="background-color: #05163d">
           
            <SearchMenu/>
            
            <AuthorizeView>
                <Authorized>
                    <b class="mx-2" style="color: white">Welcome @context.User.Identity.Name&nbsp;</b>             
