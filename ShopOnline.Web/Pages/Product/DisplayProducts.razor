@inherits DisplayProductsBase


 @foreach (var item in Products)
{
    var score = random.Next(1, 5);
    var nbReview = random.Next(100, 1000);
    <div class="col-md-3 mb-2">
        <a href="/ProductDetails/@item.Id">
            <div class="card">
                <img class="card-img" src="@item.ImageURL">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @item.Name
                    </h5>
                    @for(var i = 0; i < score; i++)
                    {
                        <i style="color: orange;" class="fa fa-star"></i>
                    }
                    @for(var i = 0; i < 5-score; i++)
                    {
                       <i style="color: orange;" class="fa-regular fa-star"></i>
                    }
                    <span class="badge bg-secondary">@nbReview</span>
                    <p class="card-text">
                        <b>@item.Price.ToString("C")</b>
                    </p>

                </div>
            </div>
        </a>
    </div>
}